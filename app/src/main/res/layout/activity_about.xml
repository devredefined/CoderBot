<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".About">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="3.5"
    android:weightSum="3"
    android:orientation="vertical"
    android:layout_marginTop="11dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:id="@+id/circle_gaurav"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
             android:layout_marginTop="10dp"
        android:weightSum="3"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:text="Gaurav Rai"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="24dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:text="Android Developer"
            android:textSize="11dp"
            android:gravity="center"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.5"
    android:weightSum="3"
    android:orientation="horizontal"
    android:layout_marginLeft="21dp"
    android:layout_marginTop="11dp"
    android:layout_marginRight="21dp">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/facebook"
        />
    <ImageView
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:src="@drawable/github"
    />
    <ImageView
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:src="@drawable/linkdin"
    />

</LinearLayout>
</LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.01"
    android:layout_marginTop="5dp"
    android:background="#000000"
    android:layout_marginRight="11dp"
    android:layout_marginLeft="11dp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_marginTop="11dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:id="@+id/circle_saurabh"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:weightSum="3"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                android:text="Saurabh Singh"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:text="Android Developer"
                android:textSize="11dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="21dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/facebook"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/github"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/linkdin"
                />

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.01"
        android:layout_marginTop="5dp"
        android:background="#000000"
        android:layout_marginRight="11dp"
        android:layout_marginLeft="11dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#4C3F9A"
        android:text="Like us on Facebook"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:gravity="center"
        android:textStyle="bold"
   android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_weight="0.7"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#E13C21"
        android:text="Mail us"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_weight="0.7"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="App powered by SAGA Developers"
        android:textColor="#9C000000"
        android:textSize="16dp"
        android:layout_marginTop="11dp"
        android:gravity="center"
        />

</LinearLayout>